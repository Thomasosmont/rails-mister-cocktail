<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="category-cocktail text-center">
          <h1><%= @cocktail.name %></h1>
          <div id="cocktail-picture">
            <%= render "photo", cocktail: @cocktail %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="description-cocktail text-center">
          <ul class="list-unstyled">
            <h3><%= @cocktail.name %> recipe</h3>
            <% @cocktail.doses.each do |dose| %>
              <li> <%= dose.description %> (<%= dose.ingredient.name %>)</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
